<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="share_activity" parent="AppTheme">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="share_layout">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/polyv_share_ly_pressed</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="setting_textview">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/setting_paddingtop</item>
        <item name="android:paddingBottom">@dimen/setting_paddingbottom</item>
        <item name="android:paddingLeft">@dimen/setting_paddingleft</item>
        <item name="android:background">@color/gray_setting_s</item>
        <item name="android:textSize">@dimen/setting_tv_textsize_s</item>
        <item name="android:textColor">@color/gray_setting</item>
    </style>

    <style name="setting_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/setting_paddingleft</item>
        <item name="android:paddingTop">@dimen/setting_paddingleft</item>
        <item name="android:paddingBottom">@dimen/setting_paddingleft</item>
        <item name="android:paddingRight">@dimen/setting_paddingright</item>
        <item name="android:background">@drawable/polyv_setting_ly_pressed</item>
    </style>

    <style name="setting_textview_s">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textSize">@dimen/setting_tv_textsize</item>
        <item name="android:textColor">@color/black_setting_s</item>
    </style>

    <style name="setting_imageview">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:src">@drawable/polyv_setting_iv_selected</item>
    </style>

    <style name="setting_view">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/gray_share</item>
        <item name="android:layout_marginLeft">@dimen/setting_paddingleft</item>
    </style>

    <style name="setting_imageview_s">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="setting_activity" parent="AppTheme">
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="finish_textview">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignLeft">@id/tv_finish</item>
        <item name="android:textColor">@color/white_share</item>
        <item name="android:drawablePadding">@dimen/finish_paddingleft</item>
        <item name="android:textSize">@dimen/finish_tv_textsize_s</item>
    </style>
</resources>
